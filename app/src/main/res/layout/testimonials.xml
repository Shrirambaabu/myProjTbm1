<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_style"
    android:orientation="vertical"
    android:padding="@dimen/margin_8">


    <TextView
        android:id="@+id/testimonial"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center|start"
        android:maxLines="1"
        android:padding="@dimen/margin_8"
        android:text="THARUNBHARATh "
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_4dp"
        android:weightSum="9">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/testimonial_profile_img"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical"
            android:padding="@dimen/margin_4dp">

            <TextView
                android:id="@+id/testimonial_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:maxLines="1"
                android:padding="@dimen/margin_4dp"
                android:text="THARUNBHARATh "
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/testimonial_profile_college"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:maxLines="1"
                android:padding="@dimen/margin_4dp"
                android:text="THARUNBHARAsdsadsadsadsasaTh "
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>