<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_style"
    android:orientation="vertical"
    android:padding="@dimen/margin_8">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/mentor_img"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:padding="@dimen/margin_8"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/mentor_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:maxLines="1"
        android:padding="@dimen/margin_8"
        android:text="Our Awesome Mentors Name"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mentor_profession"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:maxLines="1"
        android:padding="@dimen/margin_8"
        android:text="mentor_profession"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/mentor_company"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:maxLines="1"
        android:padding="@dimen/margin_4dp"
        android:text="mentor_company"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="@dimen/margin_4dp"
        android:weightSum="3">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/linked_in_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/logo" />


        <TextView
            android:id="@+id/mentor_linked_in"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:maxLines="1"
            android:text="mentor_linked_in"
            android:layout_weight="2"
            android:textAllCaps="false"

            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>



</LinearLayout>