<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_style"
    android:orientation="vertical"
    android:padding="@dimen/margin_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_4dp"
        android:weightSum="3">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/recently_placed_profile_img"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/recently_placed_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center|start"
            android:maxLines="1"
            android:text="THARUNBHARATh "
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_4dp"
        android:weightSum="8">

        <TextView
            android:id="@+id/recently_placed_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_4dp"
            android:layout_weight="7"
            android:gravity="center|start"
            android:maxLines="2"
            android:padding="@dimen/margin_4dp"
            android:layout_gravity="center"
            android:text="20/05/2017wdawdwsdsadadsadsadsadawdawdwsdsadadsadsadsadasdsadsadsadsadsadasdsadsadasdasdsasdsadsadsadsadsadasdsadsadasdasdsa wdawdwsdsadadsadsadsadasdsadsadsadsadsadasdsadsadasdasdsa 18:36 "
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/recently_placed_more_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/more"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>