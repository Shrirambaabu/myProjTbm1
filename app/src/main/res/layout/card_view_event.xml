<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_2"
    android:background="@drawable/home_button_style"
    android:orientation="vertical">


    <TextView
        android:id="@+id/eventCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:maxLines="2"
        android:text="Openings in DECATHLON"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/eventDesignation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:maxLines="2"
        android:padding="@dimen/margin_2"
        android:text="JOB POST"
        android:textColor="@color/white"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/eventVenue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:maxLines="2"
        android:padding="@dimen/margin_2"
        android:text="VENUE: VARIOUS CITIES"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/eventDate"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_2"
        android:layout_weight="7"
        android:padding="@dimen/margin_2"
        android:gravity="center|start"
        android:maxLines="1"
        android:text="20/05/2017 18:36 "
        android:textColor="@color/white"
        android:textSize="16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/eventRegistered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxLines="2"
            android:padding="@dimen/margin_2"
            android:text="1 PEOPLES REGISTERED"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/eventStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_2"
            android:layout_weight="7"
            android:gravity="end"
            android:maxLines="1"
            android:text="closed"
            android:textColor="@color/white"
            android:textSize="16sp" />



    </LinearLayout>


    <TextView
        android:id="@+id/event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:maxLines="2"
        android:text="I am trained engineefd r in dfdsf dfgdgdf sfdsadasdasd  ds  dsds  dsja..."
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/event_industry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:gravity="center"
        android:maxLines="1"
        android:padding="@dimen/margin_2"
        android:text="IT INDUSTRY"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_2"
        android:weightSum="10">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/event_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/event_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center|start"
            android:maxLines="1"
            android:text="THARUNBHARAThasd"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/event_time"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_2"
        android:layout_weight="7"
        android:gravity="center|start"
        android:maxLines="1"
        android:text="20/05/2017 18:36 "
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_8"
        android:orientation="horizontal"
        android:padding="@dimen/margin_2"
        android:weightSum="10">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/comment_profile_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/user_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="9"
            android:background="@drawable/comment_style"
            android:gravity="center|start"
            android:hint="Comment"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/white" />

    </LinearLayout>


</LinearLayout>