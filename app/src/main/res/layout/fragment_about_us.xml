<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:background="@color/colorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_16"
            android:layout_marginStart="@dimen/margin_16"
            android:background="@drawable/button_style"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewRegistration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_16"
                android:text="@string/about_Us"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/socialPlacement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/socialPlacement"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/neverMiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:gravity="start"
                android:text="@string/neverMiss"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/getNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:gravity="start"
                android:text="@string/getNotified"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/attendEvents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:gravity="start"
                android:text="@string/attendEvents"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/connectWith"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:gravity="start"
                android:text="@string/connectWith"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16"
                android:gravity="center"
                android:text="@string/subscribe"
                android:textColor="#18FFFF"
                android:textSize="16sp" />


            <LinearLayout
                android:id="@+id/linearLayoutEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="8">

                <ImageView
                    android:id="@+id/imageViewEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_16"
                    android:layout_weight="2"
                    app:srcCompat="@drawable/ic_mail_outline_white_36dp" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/editTextSubscribeEmail"
                    android:layout_width="250dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="@dimen/margin_18"
                    android:layout_weight="6"
                    android:hint="@string/emailHint"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/white"
                    android:textColorHint="@color/colorAccent"
                    app:backgroundTint="@color/colorAccent" />

            </LinearLayout>

            <Button
                android:id="@+id/subscribeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:background="@drawable/button_style"
                android:text="Subscribe"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/address"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/whatsApp1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="@dimen/margin_16"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_16"
                    app:srcCompat="@drawable/wlogo" />

                <TextView
                    android:id="@+id/whatsApp11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16"
                    android:text="+91 87547 98211"
                    android:layout_toEndOf="@+id/whatsApp1"
                    android:layout_marginStart="@dimen/margin_8"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/colorAccent" />

                <ImageView
                    android:id="@+id/whatsApp2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="@dimen/margin_16"
                    android:layout_gravity="center"
                    android:layout_below="@+id/whatsApp1"
                    android:layout_marginStart="@dimen/margin_16"
                    app:srcCompat="@drawable/wlogo" />

                <TextView
                    android:id="@+id/whatsApp21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16"
                    android:layout_marginEnd="@dimen/margin_18"
                    android:layout_toEndOf="@+id/whatsApp2"
                    android:layout_marginStart="@dimen/margin_8"
                    android:layout_below="@+id/whatsApp1"
                    android:textSize="18sp"
                    android:text="+91 87547 98211"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/colorAccent" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>